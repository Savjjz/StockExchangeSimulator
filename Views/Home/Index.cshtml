@model IEnumerable<DataLayer.Entityes.Stock>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Список акций</title>
</head>
<body>
    <h3>Список акций</h3>
    <p>
        <input maxlength="25" size="30" />
        <input type="button" value="поиск" />
        <select size="1">
            <option disabled>Сортировать по</option>
            <option>Странам</option>
            <option>Цене</option>
            <option>Доходности</option>
        </select>
    </p>
    <table class="StockList">
        <tr>
            <td>Компания</td>
            <td>Краткое название</td>
            <td>Страна</td>
            <td>Текущая цена</td>
            <td>Доходность за 1 год</td>
        </tr>
        @foreach (var stock in Model)
        {
            <tr>
                <td><a class="nav-link text-dark" asp-controller="StockInfoController" asp-action="ShowStockInfo" asp-route-id="@stock.Id">@stock.Company.FullName</a></td>
                <td>@stock.Company.ShortName</td>
                <td>@stock.Company.Country.Name</td>
                <td>@stock.CurrentPrice</td>
                <td>@stock.YearPorfitability</td>
            </tr>
        }
    </table>
</body>
</html>
