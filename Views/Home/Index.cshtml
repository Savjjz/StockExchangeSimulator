@model IEnumerable<DataLayer.Entityes.Stock>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Список акций</title>
</head>
<body>
    <h3>Список акций</h3>
    <table class="StockList">
        <tr>
            <td>Компания</td>
            <td>Краткое название</td>
            <td>Страна</td>
            <td>Текущая цена</td>
            <td>Доходность за 1 год</td>
            <td></td>
        </tr>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Company.FullName</td>
                <td>@stock.Company.ShortName</td>
                <td>@stock.Company.Country.Name</td>
                <td>@stock.CurrentPrice</td>
                <td>@stock.YearPorfitability</td>
            </tr>
        }
    </table>
</body>
</html>
